<div class="card">
  <div class="card-header">
    <h1 class="display-4"><%= friend.first_name + " " + friend.last_name%></h1>
  </div>
  <div class="card-body">
    <p class="lead"><%= friend.email %> | <%= friend.phone %> | <%= friend.facebook %></p>
  <br>
  <p class="lead">
  <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %> 
  <%= link_to "Back", friends_path, class:"btn btn-dark"%>
  <%= button_to "Delete", friend, method: :delete, data: {"turbo-confirm": 'Are you sure?'}, class:"btn btn-outline-danger" %>
    </p>
  </div>
</div>